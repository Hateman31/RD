#: kivy 1.9.0

<Foo>:
	BoxLayout:
		padding:60
		orientation:'vertical'
		TextInput:
			id: inpt1
			multiline: False
			font_size:'20pt'
			text_size:None,None
			size_hint:0.1,None
			line_spacing:1
			pos_hint: {'y': 0.1,'x':0.5}
		TextInput:
			id: inpt2
			multiline: False
			font_size:'20pt'
			size_hint:None,None
			pos_hint: {'center_x': .5}
		Label:
			id:lb1
			height: '24dp'
			font_size:'40dp'
			padding:(6,6)
			size_hint:None,None
			pos_hint: {'center_x': .5}
			text_size:70,70
			line_height:1.5
			on_release:self.text='0'
		Button:
			size_hint: .1, None
			pos_hint: {'center_x': .5}
			text:'OK'
			font_size: '20pt'
			on_press: lb1.text=root.bar(inpt1,inpt2)
		Button:	
			size_hint:None,None
			text:'Exit'
			font_size: '20pt'
			on_press:quit()
			
