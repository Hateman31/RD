#: kivy 1.9.0

<Foo>:
	BoxLayout:
		padding:60
		spacing:6
		orientation:'vertical'
		BoxLayout:
			size_hint:None,0.8
			orientation:'horizontal'
			spacing:4
			TextInput:
				id: inpt1
				multiline: False
				font_size:'40dp'
				size_hint:None,None
				text:'0'
				padding:0.4*self.width,0.25*self.height,0,0
			TextInput:
				id: inpt2
				multiline: False
				font_size:'40dp'
				size_hint:None,None
				text:'0'
				padding:0.4*self.width,0.25*self.height,0,0
		Label:
			id:lb1
			font_size:'40dp'
			size_hint:0.5,None
			pos_hint:{'center_x':0.5}
			text:'0'
		GridLayout:
			spacing:15
			cols:2
			Button:
				size_hint: .4, None
				text:'OK'
				font_size: '20pt'
				on_press: lb1.text=root.bar(inpt1,inpt2)
				pos_hint:{'center_x':0.5}
			Button:	
				size_hint:.4,None
				text:'Exit'
				font_size: '20pt'
				on_press:quit()
			
