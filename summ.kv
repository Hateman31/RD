#: kivy 1.9.0
#:import Factory kivy.factory.Factory
<Foo>:
	orientation:'vertical'
	padding:16
	spacing:6
	BoxLayout:
		spacing:6
		size_hint_y:None
		Button:
			text:'Choose folder'
			size_hint_y:None
			on_release:sm.current='scrn3'
		Button:
			text:'Exit'
			size_hint_y:None
			on_press:exit()
	ScreenManager:
		id:sm
		Screen:
			name:'scrn1'
			BoxLayout:
				orientation:'vertical'
				spacing:10
				GridLayout:
					cols:2
					rows:3
					Label:
						text:'Damage'
					TextInput
					Label:
						text:'Frags'
					TextInput
					Label:
						text:'XP'
					TextInput
				Button:
					size_hint:.5,None
					pos_hint:{'center_x':.5}
					text:'Next'
					on_release:sm.current='scrn2'
		Screen:
			name:'scrn2'
			BoxLayout:
				orientation:'vertical'
				spacing:10
				GridLayout:
					cols:2
					rows:3
					Label:
						text:'Tank'
					Spinner:
						id:tank
						values:root.tanks
					Label:
						text:'Map'
					Spinner:
						id:_map
						values:root.maps
					Label:
						text:'Battle'
					Spinner:
						id:battle
						values:root.battles
				BoxLayout:
					size_hint_y:None
					Button:
						size_hint_y:None
						text:'Prev'
						on_release:sm.current='scrn1'
					Button:
						size_hint_y:None
						text:'Search'
						on_press: root.action(tank.text,_map.text,battle.text)
		Screen:
			name:'scrn3'
			BoxLayout:
				orientation:'vertical'
				spacing:10
				FileChooserListView:
					id:filechooser
				BoxLayout:
					size_hint_y:None
					Button:
						size_hint_y:None
						text:'Cancel'
						on_release:sm.current='scrn1'
					Button:
						size_hint_y:None
						text:'OK'
